<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".customer.CustomerOrderingPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/bottomBar"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:src="@drawable/ic_baseline_arrow_back_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Place Order"
            android:fontFamily="@font/opensans_bold"
            android:textColor="@color/black"
            android:layout_marginBottom="20dp"
            android:textSize="35dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:padding="10dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/deductBtnP1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                app:cardBackgroundColor="@color/bold_orange">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_horizontal_rule_24"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/countP1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/deductBtnP1"
                android:layout_marginHorizontal="10dp"
                android:text="0"
                android:fontFamily="@font/opensans_regular"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/addBtnP1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/countP1"
                android:layout_centerVertical="true"
                app:cardBackgroundColor="@color/bold_orange">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_add_24"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/addBtnP1"
                android:layout_marginHorizontal="20dp"
                android:text="Nasi Uduk"
                android:fontFamily="@font/opensans_regular"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Rp. 25.000"
                android:fontFamily="@font/opensans_regular"
                android:textColor="@color/black"
                android:textSize="20dp"/>

        </RelativeLayout>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="3dp"
            app:dividerColor="@color/gray_orange"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:padding="10dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/deductBtnP2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                app:cardBackgroundColor="@color/bold_orange">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_horizontal_rule_24"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/countP2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/deductBtnP2"
                android:layout_marginHorizontal="10dp"
                android:text="0"
                android:fontFamily="@font/opensans_regular"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/addBtnP2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/countP2"
                android:layout_centerVertical="true"
                app:cardBackgroundColor="@color/bold_orange">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_add_24"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/addBtnP2"
                android:layout_marginHorizontal="20dp"
                android:text="Ayam Goreng"
                android:fontFamily="@font/opensans_regular"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Rp. 6.000"
                android:fontFamily="@font/opensans_regular"
                android:textColor="@color/black"
                android:textSize="20dp"/>

        </RelativeLayout>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="3dp"
            app:dividerColor="@color/gray_orange"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:padding="10dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/deductBtnP3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                app:cardBackgroundColor="@color/bold_orange">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_horizontal_rule_24"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/countP3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/deductBtnP3"
                android:layout_marginHorizontal="10dp"
                android:text="0"
                android:fontFamily="@font/opensans_regular"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/addBtnP3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/countP3"
                android:layout_centerVertical="true"
                app:cardBackgroundColor="@color/bold_orange">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_add_24"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/addBtnP3"
                android:layout_marginHorizontal="20dp"
                android:text="Sayur Asem"
                android:fontFamily="@font/opensans_regular"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Rp. 5.000"
                android:fontFamily="@font/opensans_regular"
                android:textColor="@color/black"
                android:textSize="20dp"/>

        </RelativeLayout>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="3dp"
            app:dividerColor="@color/gray_orange"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:padding="10dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/deductBtnP4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                app:cardBackgroundColor="@color/bold_orange">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_horizontal_rule_24"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/countP4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/deductBtnP4"
                android:layout_marginHorizontal="10dp"
                android:text="0"
                android:fontFamily="@font/opensans_regular"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/addBtnP4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/countP4"
                android:layout_centerVertical="true"
                app:cardBackgroundColor="@color/bold_orange">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_add_24"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/addBtnP4"
                android:layout_marginHorizontal="20dp"
                android:text="Ikan Pepes"
                android:fontFamily="@font/opensans_regular"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Rp. 6.500"
                android:fontFamily="@font/opensans_regular"
                android:textColor="@color/black"
                android:textSize="20dp"/>

        </RelativeLayout>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="3dp"
            app:dividerColor="@color/gray_orange"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/priceTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Total "
            android:fontFamily="@font/opensans_regular"
            android:textColor="@color/black"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/totalPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/priceTag"
            android:layout_toLeftOf="@+id/orderBtn"
            android:text="totalPrice"
            android:textSize="25dp"
            android:fontFamily="@font/opensans_bold"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/orderBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="Place Order"
            android:fontFamily="@font/opensans_bold"/>

    </RelativeLayout>

</RelativeLayout>